@page
@model TheEmporium.Pages.ShoppingCartModel

@{
    ViewData["Title"] = "ShoppingCart";
}

<h1>ShoppingCart</h1>

<div>
	<h4>ShoppingCart</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ShoppingCart.CartGuid)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ShoppingCart.CartGuid)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ShoppingCart.DateCreated)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ShoppingCart.DateCreated)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ShoppingCart.DateModified)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ShoppingCart.DateModified)
		</dd>
	</dl>
</div>
<div>
	@foreach (var thing in Model.ShoppingCart.ShoppingCartProducts)
	{
		<div>@thing.ProductId</div>
	}
</div>
